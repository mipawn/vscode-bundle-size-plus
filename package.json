{
  "name": "vscode-bundle-size-plus",
  "displayName": "Bundle Size Plus",
  "description": "Display import/require package size in the editor (supports Vue, Svelte)",
  "version": "0.3.0",
  "publisher": "mipawn",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mipawn/vscode-bundle-size-plus.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "bundle size",
    "package size",
    "import cost",
    "vue",
    "svelte",
    "javascript",
    "typescript"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:svelte"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "bundleSizePlus.inlayHint",
        "description": "Color for bundle size inlay hints",
        "defaults": {
          "dark": "#00C853",
          "light": "#008A00",
          "highContrast": "#00C853",
          "highContrastLight": "#008A00"
        }
      }
    ],
    "configuration": {
      "title": "Bundle Size Plus",
      "properties": {
        "bundleSizePlus.enableInlayHints": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline hints showing package sizes"
        },
        "bundleSizePlus.showGzipSize": {
          "type": "boolean",
          "default": true,
          "description": "Show gzipped size instead of minified size"
        },
        "bundleSizePlus.cacheDuration": {
          "type": "number",
          "default": 86400000,
          "description": "Cache duration in milliseconds (default: 24 hours)"
        },
        "bundleSizePlus.sizeDisplayFormat": {
          "type": "string",
          "enum": [
            "short",
            "detailed"
          ],
          "default": "short",
          "description": "Format for displaying size (short: 'ðŸ“¦ 13.2 kB gzip' or detailed: 'ðŸ“¦ 13.2 kB (gzipped)')"
        },
        "bundleSizePlus.showOnlyLargePackages": {
          "type": "boolean",
          "default": false,
          "description": "Only show hints for packages larger than a certain size"
        },
        "bundleSizePlus.largePackageThreshold": {
          "type": "number",
          "default": 50000,
          "description": "Threshold in bytes for large packages (default: 50kB)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node build.js",
    "watch": "node build.js --watch",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@vue/compiler-sfc": "^3.4.0",
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  }
}
